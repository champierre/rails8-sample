<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5">
  <div class="flex gap-4">
    <% if post.image.attached? %>
      <div class="flex-shrink-0">
        <%= image_tag post.image.variant(resize_to_limit: [200, 200]), class: "w-32 h-32 object-cover rounded-lg" %>
      </div>
    <% end %>
    <div class="flex-1 space-y-3">
      <div>
        <strong class="block font-medium mb-1">Title:</strong>
        <%= post.title %>
      </div>
      <div>
        <strong class="block font-medium mb-1">Body:</strong>
        <%= post.body %>
      </div>
    </div>
  </div>
</div>
